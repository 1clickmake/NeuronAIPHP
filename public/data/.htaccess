# Prevent script execution in upload directory
# Security: Block PHP and other script files from being executed

<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Allow only image and document files
<FilesMatch "\.(jpg|jpeg|png|gif|webp|pdf|doc|docx|xls|xlsx|txt|zip)$">
    Allow from all
</FilesMatch>

# Disable directory listing
Options -Indexes

# Prevent access to .htaccess itself
<Files ~ "^\.ht">
    Order allow,deny
    Deny from all
</Files>
